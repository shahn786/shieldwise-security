<!-- Breadcrumb Navigation -->
<nav class="breadcrumb-container" aria-label="Breadcrumb navigation">
  <div class="container">
    <ol class="breadcrumb" itemscope itemtype="https://schema.org/BreadcrumbList">
      <li class="breadcrumb-item" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
        <a href="/" itemprop="item" class="breadcrumb-link">
          <i class="fas fa-home" aria-hidden="true"></i>
          <span itemprop="name">Home</span>
        </a>
        <meta itemprop="position" content="1" />
      </li>
      
      <% if (typeof breadcrumbs !== 'undefined' && breadcrumbs.length > 0) { %>
        <% breadcrumbs.forEach((crumb, index) => { %>
          <li class="breadcrumb-item" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
            <% if (crumb.url && index < breadcrumbs.length - 1) { %>
              <a href="<%= crumb.url %>" itemprop="item" class="breadcrumb-link">
                <span itemprop="name"><%= crumb.name %></span>
              </a>
            <% } else { %>
              <span itemprop="name" class="breadcrumb-current"><%= crumb.name %></span>
            <% } %>
            <meta itemprop="position" content="<%= index + 2 %>" />
          </li>
        <% }); %>
      <% } %>
    </ol>
  </div>
</nav>

<style>
.breadcrumb-container {
  background: #f8f9fa;
  border-bottom: 1px solid #e9ecef;
  padding: 15px 0;
  margin-bottom: 0;
}

.breadcrumb {
  background: transparent;
  padding: 0;
  margin: 0;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  font-size: 0.9rem;
}

.breadcrumb-item {
  display: flex;
  align-items: center;
  color: #6c757d;
}

.breadcrumb-item + .breadcrumb-item::before {
  content: ">";
  margin: 0 10px;
  color: #adb5bd;
  font-weight: 600;
}

.breadcrumb-link {
  color: #007bff;
  text-decoration: none;
  transition: color 0.3s ease;
  display: flex;
  align-items: center;
  gap: 5px;
}

.breadcrumb-link:hover {
  color: #0056b3;
  text-decoration: underline;
}

.breadcrumb-current {
  color: #495057;
  font-weight: 500;
}

.breadcrumb-item i {
  font-size: 0.8rem;
}

@media (max-width: 768px) {
  .breadcrumb {
    font-size: 0.8rem;
  }
  
  .breadcrumb-item + .breadcrumb-item::before {
    margin: 0 5px;
  }
}
</style>