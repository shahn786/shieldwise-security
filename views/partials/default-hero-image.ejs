<!-- Default Hero Image Section -->
<section class="default-hero-section" style="background: linear-gradient(135deg, #1a2332 0%, #2d3e50 100%); padding: 100px 0 80px; position: relative; overflow: hidden;">
    <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: radial-gradient(circle at 20% 50%, rgba(191, 158, 91, 0.08) 0%, transparent 50%), radial-gradient(circle at 80% 80%, rgba(26, 35, 50, 0.5) 0%, transparent 50%); pointer-events: none;"></div>
    
    <div class="container text-center" style="position: relative; z-index: 1;">
        <% if (typeof pageTitle !== 'undefined') { %>
            <h1 style="color: #ffffff; font-size: 3rem; font-weight: 800; margin-bottom: 24px; letter-spacing: -0.02em;"><%= pageTitle %></h1>
        <% } else { %>
            <h1 style="color: #ffffff; font-size: 3rem; font-weight: 800; margin-bottom: 24px; letter-spacing: -0.02em;">Professional Security Services</h1>
        <% } %>
        
        <% if (typeof pageSubtitle !== 'undefined') { %>
            <p style="color: rgba(255, 255, 255, 0.9); font-size: 1.3rem; max-width: 800px; margin: 0 auto; line-height: 1.7;"><%= pageSubtitle %></p>
        <% } else { %>
            <p style="color: rgba(255, 255, 255, 0.9); font-size: 1.3rem; max-width: 800px; margin: 0 auto; line-height: 1.7;">Professional security solutions across California</p>
        <% } %>
    </div>
</section>
