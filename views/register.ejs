    <style>
      /* Registration Page Styling - Enhanced for SEO and UX */
      body {
        font-family: 'Montserrat', sans-serif;
        background-color: #f5f7fa;
        color: #333;
        overflow-x: hidden;
      }
      
      /* Registration Title Section */
      .registration-title-section {
        background: linear-gradient(135deg, #1a1a1a, #3a3a3a);
        padding: 60px 0;
        position: relative;
        overflow: hidden;
      }
      
      .registration-title-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('/img/security-pattern.png');
        opacity: 0.05;
        z-index: 1;
      }
      
      .registration-title-section h1,
      .registration-title-section p {
        position: relative;
        z-index: 2;
      }
      
      .title-decoration {
        height: 4px;
        width: 80px;
        background: linear-gradient(90deg, #d12028, #ff4d4d);
        border-radius: 2px;
      }
      
      .registration-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 60px 0;
      }
      
      .registration-card {
        display: flex;
        width: 90%;
        max-width: 1200px;
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 15px 50px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        position: relative;
        z-index: 1;
      }
      
      .image-section {
        flex: 1;
        background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.7)), url("/img/1.jpg") no-repeat center center;
        background-size: cover;
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 40px;
        color: white;
        text-align: center;
      }
      
      .image-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, rgba(209, 32, 40, 0.3), rgba(0, 0, 0, 0.5));
        z-index: -1;
      }
      
      .image-content {
        max-width: 90%;
        z-index: 1;
      }
      
      .image-content h2 {
        font-size: 2.8rem;
        font-weight: 700;
        margin-bottom: 20px;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
      }
      
      .image-content p {
        font-size: 1.1rem;
        line-height: 1.8;
        margin-bottom: 25px;
        text-shadow: 0 1px 5px rgba(0, 0, 0, 0.5);
      }
      
      .security-features {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        margin-top: 30px;
      }
      
      .feature-item {
        display: flex;
        align-items: center;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(5px);
        padding: 10px 15px;
        border-radius: 8px;
        width: calc(50% - 10px);
      }
      
      .feature-item i {
        font-size: 1.5rem;
        color: #d12028;
        margin-right: 10px;
      }
      
      .form-section {
        flex: 1.2;
        padding: 40px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        overflow-y: auto;
        max-height: 800px;
      }
      
      .form-section h2 {
        font-weight: 700;
        margin-bottom: 30px;
        font-size: 2.2rem;
        color: #222;
        position: relative;
        padding-bottom: 15px;
      }
      
      .form-section h2::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 80px;
        height: 4px;
        background: linear-gradient(to right, #d12028, #a51920);
        border-radius: 2px;
      }
      
      .form-group {
        margin-bottom: 25px;
        display: flex;
        gap: 20px;
      }
      
      .col {
        flex: 1;
      }
      
      .form-group label {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 8px;
        display: block;
        color: #333;
      }
      
      .form-control {
        width: 100%;
        padding: 12px 15px;
        font-size: 1rem;
        border: 1px solid #ddd;
        border-radius: 8px;
        transition: all 0.3s ease;
        background-color: #f8f9fa;
      }
      
      .form-control:focus {
        border-color: #d12028;
        box-shadow: 0 0 0 0.2rem rgba(209, 32, 40, 0.25);
        background-color: #fff;
      }
      
      .form-control.error {
        border-color: #d12028;
        background-color: rgba(209, 32, 40, 0.05);
      }
      
      .error-message {
        color: #d12028;
        font-size: 0.85rem;
        display: none;
        margin-top: 5px;
        font-weight: 500;
      }
      
      #success-message {
        display: none;
        background-color: rgba(40, 167, 69, 0.9);
        color: white;
        padding: 12px;
        border-radius: 8px;
        font-weight: 500;
        animation: fadeIn 0.5s;
      }
      
      .form-control::placeholder {
        color: #aaa;
        font-style: italic;
      }
      
      .form-section button {
        width: 100%;
        padding: 14px;
        font-size: 1.1rem;
        font-weight: 600;
        color: #fff;
        background: linear-gradient(135deg, #d12028, #a51920);
        border: none;
        border-radius: 8px;
        cursor: pointer;
        margin-top: 25px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
      }
      
      .form-section button:hover {
        background: linear-gradient(135deg, #a51920, #7a1218);
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(209, 32, 40, 0.2);
      }
      
      .form-section button:before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: 0.5s;
      }
      
      .form-section button:hover:before {
        left: 100%;
      }
      
      .alert {
        margin-bottom: 20px;
        border-radius: 8px;
        font-weight: 500;
      }
      
      #cust-success-alert {
        display: none;
        background-color: rgba(40, 167, 69, 0.9);
        color: white;
        border: none;
        padding: 15px;
        animation: fadeIn 0.5s;
      }  
      
      #cust-danger-alert {
        display: none;
        background-color: rgba(220, 53, 69, 0.9);
        color: white;
        border: none;
        padding: 15px;
        animation: fadeIn 0.5s;
      }
      
      .field-section-title {
        font-size: 1.2rem;
        font-weight: 600;
        margin: 30px 0 15px;
        color: #d12028;
        border-bottom: 1px solid #eee;
        padding-bottom: 10px;
      }
      
      .required-field::after {
        content: ' *';
        color: #d12028;
      }
      
      .privacy-terms {
        margin-top: 20px;
        font-size: 0.85rem;
        color: #777;
        text-align: center;
      }
      
      .privacy-terms a {
        color: #d12028;
        text-decoration: none;
        font-weight: 600;
      }
      
      .privacy-terms a:hover {
        text-decoration: underline;
      }
      
      .form-footer {
        margin-top: 30px;
        text-align: center;
        font-size: 0.95rem;
      }
      
      .form-footer a {
        color: #d12028;
        text-decoration: none;
        font-weight: 600;
      }
      
      .form-footer a:hover {
        text-decoration: underline;
      }
      
      .password-strength {
        height: 5px;
        margin-top: 8px;
        border-radius: 3px;
        background: #eee;
        overflow: hidden;
        position: relative;
      }
      
      .password-strength-meter {
        width: 0;
        height: 100%;
        transition: width 0.3s ease, background-color 0.3s ease;
      }
      
      .password-strength-text {
        font-size: 0.8rem;
        margin-top: 5px;
        display: none;
      }
      
      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(-10px); }
        to { opacity: 1; transform: translateY(0); }
      }
      
      /* Responsive styles */
      @media (max-width: 992px) {
        .registration-card {
          flex-direction: column;
          width: 95%;
        }
        
        .image-section {
          padding: 60px 30px;
        }
        
        .form-section {
          padding: 30px;
        }
        
        .image-content h2 {
          font-size: 2.2rem;
        }
        
        .feature-item {
          width: 100%;
        }
      }
      
      @media (max-width: 768px) {
        .form-group {
          flex-direction: column;
          gap: 10px;
        }
        
        .image-section {
          padding: 40px 20px;
        }
        
        .image-content h2 {
          font-size: 1.8rem;
        }
        
        .image-content p {
          font-size: 1rem;
        }
        
        .form-section h2 {
          font-size: 1.8rem;
        }
      }
      
      @media (max-width: 576px) {
        .registration-container {
          padding: 20px 0;
        }
        
        .form-section {
          padding: 25px 15px;
        }
      }
      
      /* Testimonials Section */
      .testimonials-section {
        position: relative;
        overflow: hidden;
      }
      
      .section-title {
        position: relative;
        color: #333;
        font-weight: 700;
        padding-bottom: 15px;
      }
      
      .section-title:after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 3px;
        background: linear-gradient(90deg, #d12028, #ff4d4d);
        border-radius: 2px;
      }
      
      .testimonial-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }
      
      .testimonial-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1) !important;
      }
      
      .testimonial-text {
        line-height: 1.8;
        color: #555;
      }
      
      /* Career Benefits Section */
      .career-benefits {
        position: relative;
      }
      
      .career-benefits img {
        transition: transform 0.5s ease;
      }
      
      .career-benefits img:hover {
        transform: scale(1.02);
      }
      
      .benefit-icon {
        font-size: 1.5rem;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      
      /* FAQ Section Styling */
      .faq-section {
        position: relative;
      }
      
      .accordion .card {
        overflow: hidden;
        transition: all 0.3s ease;
      }
      
      .accordion .card:hover {
        transform: translateY(-2px);
      }
      
      .accordion .card-header {
        padding: 0;
        border-bottom: none;
      }
      
      .accordion .btn-link {
        position: relative;
        padding: 20px;
        font-size: 1.1rem;
      }
      
      .accordion .btn-link:hover {
        text-decoration: none;
        color: #d12028;
      }
      
