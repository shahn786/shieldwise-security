<body>
  <!-- Include Header -->
  <%- include('partials/Header') %>

  <main>
    <!-- Page Title Section with Career Focus -->
    <section class="registration-title-section py-4 bg-dark text-white text-center">
      <div class="container">
        <h1 class="display-4 font-weight-bold mb-2" style="color: white;">Start Your Security Career Today</h1>
        <p class="lead mb-0">Join California's premier security team and unlock professional growth opportunities</p>
        <div class="title-decoration mt-3 mb-2 mx-auto"></div>
      </div>
    </section>
  
    <div class="registration-container">
      <div class="registration-card">
        <!-- Image Section with Enhanced Benefits -->
        <div class="image-section">
          <div class="image-content">
            <h2>Join ShieldWise Security</h2>
            <p>Create your account today and access exclusive security positions, career advancement, and comprehensive training throughout California.</p>
            
            <div class="security-features">
              <div class="feature-item">
                <i class="fas fa-shield-alt"></i>
                <span>Professional Security Network</span>
              </div>
              <div class="feature-item">
                <i class="fas fa-user-tie"></i>
                <span>Career Advancement Path</span>
              </div>
              <div class="feature-item">
                <i class="fas fa-file-contract"></i>
                <span>Competitive Pay & Benefits</span>
              </div>
              <div class="feature-item">
                <i class="fas fa-chart-line"></i>
                <span>Training & Certification</span>
              </div>
              <div class="feature-item">
                <i class="fas fa-calendar-alt"></i>
                <span>Flexible Scheduling</span>
              </div>
              <div class="feature-item">
                <i class="fas fa-building"></i>
                <span>Diverse Work Environments</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Form Section -->
        <div class="form-section">
          <h2>Create an Account</h2>

          <div class="alert alert-success w-100" id="cust-success-alert" role="alert">
            Registration successful! Please check your email to verify your account.
          </div>

          <div class="alert alert-danger w-100" id="cust-danger-alert" role="alert">
            There was a problem with your registration. Please try again.
          </div>

          <form id="registrationForm" method="POST" enctype="multipart/form-data">
            <!-- Personal Information -->
            <div class="field-section-title">Personal Information</div>
            
            <!-- Name Fields -->
            <div class="form-group">
              <div class="col">
                <label for="firstName" class="required-field">First Name</label>
                <input
                  type="text"
                  id="firstName"
                  name="firstName"
                  class="form-control"
                  placeholder="Enter your first name"
                  aria-required="true"
                />
                <div class="error-message" id="firstName-error">
                  First name is required.
                </div>
              </div>
              <div class="col">
                <label for="lastName" class="required-field">Last Name</label>
                <input
                  type="text"
                  id="lastName"
                  name="lastName"
                  class="form-control"
                  placeholder="Enter your last name"
                  aria-required="true"
                />
                <div class="error-message" id="lastName-error">
                  Last name is required.
                </div>
              </div>
            </div>

            <!-- Contact Fields -->
            <div class="form-group">
              <div class="col">
                <label for="email" class="required-field">Email Address</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-control"
                  placeholder="example@mail.com"
                  aria-required="true"
                />
                <div class="error-message" id="email-error">
                  Enter a valid email address.
                </div>
              </div>
              <div class="col">
                <label for="phone" class="required-field">Phone Number</label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="form-control"
                  placeholder="1234567890" 
                  maxlength="10"
                  aria-required="true"
                />
                <div class="error-message" id="phone-error">
                  Phone number must be 10 digits.
                </div>
              </div>
            </div>

            <!-- Address Section -->
            <div class="field-section-title">Address Information</div>
            
            <!-- Address Fields -->
            <div class="form-group">
              <div class="col">
                <label for="street" class="required-field">Street Address</label>
                <input
                  type="text"
                  id="street"
                  name="street"
                  class="form-control"
                  placeholder="123 Main St"
                  aria-required="true"
                />
                <div class="error-message" id="street-error">
                  Street Address is required.
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col">
                <label for="city" class="required-field">City</label>
                <input
                  type="text"
                  id="city"
                  name="city"
                  class="form-control"
                  placeholder="Your City"
                  aria-required="true"
                />
                <div class="error-message" id="city-error">
                  City is required.
                </div>
              </div>
              <div class="col">
                <label for="state" class="required-field">State</label>
                <input
                  type="text"
                  id="state"
                  name="state"
                  class="form-control"
                  placeholder="Your State"
                  aria-required="true"
                />
                <div class="error-message" id="state-error">
                  State is required.
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col">
                <label for="zip" class="required-field">Zip/Postal Code</label>
                <input
                  type="text"
                  id="zip"
                  name="zip"
                  class="form-control"
                  placeholder="12345" 
                  maxlength="5"
                  aria-required="true"
                />
