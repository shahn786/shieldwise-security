    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // FAQ Toggles
            document.querySelectorAll('.faq-question').forEach(function(question) {
                question.addEventListener('click', function() {
                    const item = this.closest('.citrus-heights-faq-item');
                    const toggle = this.querySelector('.faq-toggle i');
                    const isActive = item.classList.contains('active');

                    // Close all other items
                    document.querySelectorAll('.citrus-heights-faq-item').forEach(function(otherItem) {
                        otherItem.classList.remove('active');
                        otherItem.querySelector('.faq-toggle i').classList.remove('fa-minus');
                        otherItem.querySelector('.faq-toggle i').classList.add('fa-plus');
                    });

                    // Toggle current item
                    if (!isActive) {
                        item.classList.add('active');
                        toggle.classList.remove('fa-plus');
                        toggle.classList.add('fa-minus');
                    }
                });
            });

            // Smooth scroll for coverage links
            document.querySelectorAll('.coverage-item a').forEach(function(link) {
                link.addEventListener('click', function(e) {
                    const href = this.getAttribute('href');
                    if (href.startsWith('/')) {
                        this.closest('.coverage-item').classList.add('loading');
                        setTimeout(() => {
                            window.location.href = href;
                        }, 300);
                    }
                });
            });
        });
