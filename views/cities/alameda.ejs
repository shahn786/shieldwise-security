        $(document).ready(function() {
            $('.enhanced-faq-button').on('click', function() {
                const icon = $(this).find('.toggle-icon i');
                const isExpanded = $(this).attr('aria-expanded') === 'true';
                
                // Reset all icons
                $('.enhanced-faq-button .toggle-icon i').removeClass('fa-minus').addClass('fa-plus');
                
                // Update current icon
                if (!isExpanded) {
                    icon.removeClass('fa-plus').addClass('fa-minus');
                }
            });
            
            // Handle accordion events
            $('#alamedaAccordion').on('shown.bs.collapse', function(e) {
                const button = $(e.target).prev().find('.enhanced-faq-button');
                button.find('.toggle-icon i').removeClass('fa-plus').addClass('fa-minus');
            });
            
            $('#alamedaAccordion').on('hidden.bs.collapse', function(e) {
                const button = $(e.target).prev().find('.enhanced-faq-button');
                button.find('.toggle-icon i').removeClass('fa-minus').addClass('fa-plus');
            });
        });
