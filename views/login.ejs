<body class="login-page">
  <!-- Include Header -->
  <%- include('partials/Header') %>

  <div class="login-container">
    <div class="form-container">
      <div class="form-logo">
        <img loading="lazy" src="/img/logo.webp" alt="ShieldWise Security Logo" onerror="this.src='/img/shield-icon.png'; this.onerror=null;">
      </div>

      <div class="alert alert-success w-100" id="cust-success-alert" role="alert">
        Login successful!
      </div>

      <div class="alert alert-danger w-100" id="cust-danger-alert" role="alert">
        Login failed, please check your credentials.
      </div>

      <% if (!loggedIn) { %>
        <h2>Client Portal Login</h2>
        <form id="loginForm" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <label for="username"><i class="fas fa-user-shield"></i> Username</label>
            <input type="text" class="form-control mb-0" id="username" name="username" placeholder="Enter your username">
            <div class="error" id="username-error">Please enter a valid username.</div>
          </div>
          <div class="form-group">
            <label for="password"><i class="fas fa-lock"></i> Password</label>
            <input type="password" class="form-control mb-0" id="password" name="password" placeholder="Enter your password">
            <div class="error" id="password-error">Please enter a password.</div>
          </div>
          <button type="submit" class="btn btn-primary">Secure Login <i class="fas fa-sign-in-alt ml-2"></i></button>
          <div class="security-notice">
            <i class="fas fa-shield-alt"></i>
            <span>Your connection to this login page is secure and encrypted.</span>
          </div>
        </form>
        <p>Don't have an account? <a href="/register">Create an account</a></p>
      <% } else { %>
        <h2>Welcome back, <%= username %>!</h2>
        <p>Explore exciting career opportunities with ShieldWise Security.</p>
        <a href="/logout" class="btn btn-primary">Logout <i class="fas fa-sign-out-alt ml-2"></i></a>
      <% } %>
    </div>
  </div>

  <section class="security-banner-123">
    <div class="banner-content-123">
      <h2 id="banner-heading-123">EXPERT SECURITY SERVICES ACROSS CALIFORNIA</h2>
      <p id="banner-text-123">
        Trust ShieldWise Security for professional protection tailored to your needs. From armed guards to event security, we deliver reliable solutions for businesses and property owners.
      </p>
      <p class="phone-number-123">
        <a href="tel:+17147167430"><i class="fas fa-phone-alt mr-2"></i> (714) 716-7430</a>
      </p>
    </div>
  </section>

  <!-- Include Footer -->
  <%- include('partials/Footer') %>

  <!-- Back to Top Button -->
  <button id="back-to-top-123" title="Go to top">
    <i class="fas fa-chevron-up"></i>
  </button>

  <!-- Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    document.getElementById("loginForm").addEventListener("submit", async (event) => {
      event.preventDefault(); // Prevent form submission for validation

      let isValid = true;

      // Get form fields
      const username = document.getElementById("username");
      const password = document.getElementById("password");

      // Clear previous error messages
      document.getElementById("username-error").style.display = "none";
      document.getElementById("password-error").style.display = "none";

      // Validate fields
      if (!username.value.trim()) {
        isValid = false;
        document.getElementById("username-error").style.display = "block";
        username.classList.add("is-invalid");
      } else {
        username.classList.remove("is-invalid");
        username.classList.add("is-valid");
      }

      if (!password.value.trim()) {
        isValid = false;
        document.getElementById("password-error").style.display = "block";
        password.classList.add("is-invalid");
      } else {
        password.classList.remove("is-invalid");
        password.classList.add("is-valid");
      }

      // If form is not valid, stop here
      if (!isValid) {
        return;
      }

      const errorContainer = document.getElementById("cust-danger-alert");
      const successContainer = document.getElementById("cust-success-alert");

      // Prepare data for the API call
      const formData = {
        username: username.value,
        password: password.value,
      };

      try {
        // Send login request to the server
        const response = await fetch("/login", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(formData),
        });

        const result = await response.json();

        // Handle server response
        if (response.ok) {
          successContainer.style.display = "block";
          successContainer.innerHTML = "";
          errorContainer.style.display = "none";
          errorContainer.innerHTML = "";
          
          // Login successful, update UI
          successContainer.innerHTML = `${result.message || "Login successful! Redirecting..."}`;
          
          // Add loading animation
          document.querySelector(".btn-primary").innerHTML = '<i class="fas fa-circle-notch fa-spin mr-2"></i> Logging in...';
          document.querySelector(".btn-primary").disabled = true;
          
          // Redirect after delay
          setTimeout(() => {
            window.location.href = "/career";
          }, 2000);
        } else {
          errorContainer.style.display = "block";
          errorContainer.innerHTML = "";
          successContainer.style.display = "none";
          
          // Show error message
          errorContainer.innerHTML = `<i class="fas fa-exclamation-circle mr-2"></i> ${result.message || "Login failed. Please try again."}`;
          
          // Shake the form on error
          const formContainer = document.querySelector(".form-container");
          formContainer.classList.add("shake");
          setTimeout(() => {
            formContainer.classList.remove("shake");
          }, 500);
        }
      } catch (error) {
        errorContainer.style.display = "block";
        errorContainer.innerHTML = "";
        successContainer.style.display = "none";
        errorContainer.innerHTML = `<i class="fas fa-exclamation-triangle mr-2"></i> An error occurred during login. Please try again.`;
      }
    });

    // Hide error messages when user starts typing
    document.getElementById("username").addEventListener("input", () => {
      document.getElementById("username-error").style.display = "none";
      document.getElementById("username").classList.remove("is-invalid");
    });

    document.getElementById("password").addEventListener("input", () => {
      document.getElementById("password-error").style.display = "none";
      document.getElementById("password").classList.remove("is-invalid");
    });
    
    // Back to Top Button Script
    document.addEventListener("DOMContentLoaded", function () {
      const backToTopButton = document.getElementById("back-to-top-123");

      window.addEventListener("scroll", function () {
        if (window.scrollY > 300) {
          backToTopButton.classList.add("show");
        } else {
          backToTopButton.classList.remove("show");
        }
      });

      backToTopButton.addEventListener("click", function () {
        window.scrollTo({ top: 0, behavior: "smooth" });
      });
      
      // Add shake animation
      document.head.insertAdjacentHTML("beforeend", `
        <style>
          @keyframes shake {
            0%, 100% { transform: translateX(0); }
            10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
            20%, 40%, 60%, 80% { transform: translateX(5px); }
          }
          .shake {
            animation: shake 0.5s cubic-bezier(.36,.07,.19,.97) both;
          }
        </style>
      `);
    });
  </script>
</body>
