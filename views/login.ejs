  <!-- Enhanced Login Page Styling -->
  <style>
    /* Login Page Specific Styling */
    body.login-page {
      height: 100%;
      margin: 0;
      font-family: 'Montserrat', sans-serif;
      background-color: #f4f6f9;
    }

    .login-container {
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 85vh;
      background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.7)), url('/img/login.jpeg');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
      position: relative;
    }

    .form-container {
      background: rgba(255, 255, 255, 0.95);
      padding: 40px 50px;
      border-radius: 10px;
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
      width: 450px;
      max-width: 95%;
      position: relative;
      z-index: 2;
      transition: all 0.3s ease;
    }
    
    .form-container:hover {
      transform: translateY(-5px);
      box-shadow: 0 18px 40px rgba(0, 0, 0, 0.4);
    }

    .form-container h2 {
      font-weight: 700;
      font-size: 1.8rem;
      margin-bottom: 1.5rem;
      color: #222;
      position: relative;
      padding-bottom: 0.6rem;
      text-align: center;
    }
    
    .form-container h2:after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 60px;
      height: 3px;
      background-color: #d12028;
    }

    .form-container label {
      font-weight: 600;
      color: #444;
      margin-bottom: 0.5rem;
      font-size: 0.95rem;
    }

    .form-container .form-control {
      padding: 0.8rem 1rem;
      margin-bottom: 1.5rem;
      border-radius: 5px;
      border: 1px solid #ddd;
      transition: all 0.3s;
      background-color: rgba(255, 255, 255, 0.9);
      font-size: 1rem;
    }
    
    .form-container .form-control:focus {
      border-color: #007bff;
      box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
      background-color: #fff;
    }

    .form-container .btn-primary {
      background: linear-gradient(45deg, #d12028, #a51920);
      border: none;
      padding: 0.8rem;
      font-weight: 600;
      width: 100%;
      margin-top: 1.5rem;
      border-radius: 5px;
      color: white;
      font-size: 1.1rem;
      letter-spacing: 0.5px;
      transition: all 0.3s;
      position: relative;
      overflow: hidden;
    }
    
    .form-container .btn-primary:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 15px rgba(209, 32, 40, 0.3);
      background: linear-gradient(45deg, #a51920, #d12028);
    }
    
    .form-container .btn-primary:before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: 0.5s;
    }
    
    .form-container .btn-primary:hover:before {
      left: 100%;
    }

    .form-container p {
      text-align: center;
      margin-top: 1.5rem;
      color: #555;
      font-size: 0.95rem;
    }

    .form-container a {
      color: #d12028;
      text-decoration: none;
      font-weight: 600;
      transition: color 0.3s;
    }
    
    .form-container a:hover {
      color: #a51920;
      text-decoration: underline;
    }
    
    .error {
      color: #d12028;
      display: none;
      font-size: 0.875rem;
      margin-top: -1.25rem;
      margin-bottom: 1rem;
    }
    
    #cust-success-alert {
      display: none;
      background-color: rgba(40, 167, 69, 0.9);
      color: white;
      border: none;
      padding: 0.75rem 1.25rem;
      border-radius: 5px;
      margin-bottom: 1.5rem;
      font-weight: 500;
      animation: fadeIn 0.5s;
    }
    
    #cust-danger-alert {
      display: none;
      background-color: rgba(220, 53, 69, 0.9);
      color: white;
      border: none;
      padding: 0.75rem 1.25rem;
      border-radius: 5px;
      margin-bottom: 1.5rem;
      font-weight: 500;
      animation: fadeIn 0.5s;
    }
    
    .form-logo {
      text-align: center;
      margin-bottom: 1.5rem;
    }
    
    .form-logo img {
      height: 60px;
    }
    
    .security-notice {
      display: flex;
      align-items: center;
      margin-top: 1.5rem;
      font-size: 0.85rem;
      color: #555;
    }
    
    .security-notice i {
      color: #28a745;
      margin-right: 0.5rem;
      font-size: 1rem;
    }
    
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-10px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    /* Security Banner Enhancements */
    .security-banner-123 {
      position: relative;
      width: 100%;
      background: linear-gradient(135deg, #1a1a1a, #333);
      color: white;
      padding: 50px 20px;
      margin: 60px 0;
      overflow: hidden;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }
    
    .security-banner-123::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(45deg, rgba(209, 32, 40, 0.3), transparent);
      z-index: 1;
    }
    
    .banner-content-123 {
      position: relative;
      z-index: 2;
      max-width: 800px;
      margin: 0 auto;
      text-align: center;
    }
    
    #banner-heading-123 {
      font-size: 2.2rem;
      font-weight: 700;
      text-transform: uppercase;
      margin-bottom: 20px;
      letter-spacing: 1px;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }
    
    #banner-text-123 {
      font-size: 1.1rem;
      line-height: 1.6;
      margin-bottom: 25px;
      text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.4);
    }
    
    .phone-number-123 {
      font-size: 1.2rem;
      font-weight: 600;
      margin-top: 20px;
    }
    
    .phone-number-123 a {
      color: white;
      text-decoration: none;
      background: linear-gradient(45deg, #d12028, #a51920);
      padding: 12px 28px;
      border-radius: 50px;
      display: inline-block;
      transition: all 0.3s ease;
      box-shadow: 0 5px 15px rgba(209, 32, 40, 0.4);
    }
    
    .phone-number-123 a:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(209, 32, 40, 0.5);
    }
    
    /* Back to Top Button */
    #back-to-top-123 {
      position: fixed;
      bottom: 30px;
      right: 30px;
      z-index: 999;
