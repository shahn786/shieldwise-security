    }
    
    @media (max-width: 480px) {
      .form-container {
        padding: 25px 20px;
      }
      
      .form-container h2 {
        font-size: 1.4rem;
      }
      
      #banner-heading-123 {
        font-size: 1.5rem;
      }
    }
  </style>
