    }
    
    #back-to-top-123:hover {
      background-color: #a51920;
      transform: translateY(-5px);
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.4);
    }

    /* Responsive Adjustments */
    @media (max-width: 768px) {
      .form-container {
        padding: 30px 25px;
      }
      
      .form-container h2 {
        font-size: 1.6rem;
      }
      
      #banner-heading-123 {
        font-size: 1.8rem;
      }
      
      #banner-text-123 {
        font-size: 1rem;
      }
      
      .phone-number-123 a {
