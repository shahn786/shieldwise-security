<body>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <%- include('../partials/Header') %>

    
    <main id="main-content">
        <!-- Hero Section -->
        <section class="hero-section">
            <div class="container">
                <h1 class="hero-title speakable-intro">Professional Hotel Security Services</h1>
                <p class="hero-subtitle speakable-intro">Comprehensive hospitality facility security ensuring guest safety and property protection</p>
            </div>
        </section>

        <!-- Premier Overview Section -->
        <div style="background-color:#ffffff; padding:60px; border-radius:14px;
            font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color:#1c1c1c; max-width:960px; margin:60px auto;
            box-shadow:0 10px 30px rgba(0,0,0,0.1); border:1px solid #e0e0e0;">
            <h1 style="font-size:38px; margin-bottom:28px; color:#152f45;">
                Premier Hotel Security Services for Hospitality Excellence
            </h1>
            <p class="speakable-services" style="font-size:20px; line-height:1.8; margin-bottom:0;">
                <strong>ShieldWise Security</strong> provides comprehensive hotel security services tailored to meet the unique needs of hospitality facilities. Our services are designed to ensure the safety and well-being of guests, staff, and visitors, while maintaining a secure environment conducive to quality hospitality service delivery. We offer <strong style="color:#bf9e5b;">24/7 on-site security personnel</strong> trained to handle the specific challenges of hospitality settings, conducting regular patrols, monitoring access points, and responding promptly to incidents. Our advanced <strong style="color:#bf9e5b;">access control systems</strong> restrict unauthorized entry to sensitive areas such as guest floors, conference rooms, and administrative offices. Strategic surveillance solutions provide real-time oversight while our <strong style="color:#bf9e5b;">guest management protocols</strong> ensure only authorized individuals access restricted areas.
            </p>
            <div class="speakable-contact" style="margin-top:20px; font-size:18px;">
                <strong>Call This Number:</strong> +1-714-716-7430 | 
                <strong>Email:</strong> info@shieldwisesecurity.com
            </div>
        </div>

        <!-- Hotel Security Features Section -->
        <section id="features" class="apartment-features-section">
            <div class="container">
                <h2 class="section-title">Comprehensive Hotel Security Features</h2>
                <p class="section-subtitle">Advanced protection capabilities designed for hospitality excellence</p>
                
                <div class="apartment-grid">
                    <% serviceData.features.forEach(feature => { %>
                    <div class="apartment-card">
                        <div class="apartment-icon">
                            <i class="<%= feature.icon %>" aria-hidden="true"></i>
                        </div>
                        <h3 class="apartment-title"><%= feature.title %></h3>
                        <p class="apartment-description"><%= feature.description %></p>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- Security Process Section -->
        <section class="security-process-section">
            <div class="container">
                <h2 class="section-title">Our Hotel Security Process</h2>
                <p class="section-subtitle">Hospitality-focused approach to comprehensive security</p>
                
                <div class="row">
                    <% serviceData.processSteps.forEach(step => { %>
                    <div class="col-md-3">
                        <div class="process-step">
                            <div class="process-number"><%= step.number %></div>
                            <h3 class="process-title"><%= step.title %></h3>
                            <p><%= step.description %></p>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- Benefits Section -->
        <section class="benefits-section">
            <div class="container">
                <h2 class="section-title">Why Choose ShieldWise Hotel Security</h2>
                <div class="row">
                    <div class="col-md-6">
                        <% serviceData.benefits.slice(0, 3).forEach(benefit => { %>
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <i class="<%= benefit.icon %>" aria-hidden="true"></i>
                            </div>
                            <div class="benefit-content">
                                <h4><%= benefit.title %></h4>
                                <p><%= benefit.description %></p>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                    <div class="col-md-6">
                        <% serviceData.benefits.slice(3, 6).forEach(benefit => { %>
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <i class="<%= benefit.icon %>" aria-hidden="true"></i>
                            </div>
                            <div class="benefit-content">
                                <h4><%= benefit.title %></h4>
                                <p><%= benefit.description %></p>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </section>

        <!-- Services Overview -->
        <section class="py-5">
            <div class="container">
                <div class="row">
                    <% serviceData.serviceOfferings.forEach(offering => { %>
                    <div class="col-md-4">
                        <div class="service-card">
                            <i class="<%= offering.icon %> service-icon" aria-hidden="true"></i>
                            <h3 class="service-title"><%= offering.title %></h3>
                            <ul class="feature-list">
                                <% offering.features.forEach(feature => { %>
                                <li><%= feature %></li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- Stats Section -->
        <section class="stats-section">
            <div class="container">
                <div class="row">
                    <% serviceData.statistics.forEach(stat => { %>
                    <div class="col-md-3">
                        <div class="stat-card">
                            <div class="stat-number"><%= stat.number %></div>
                            <div class="stat-label"><%= stat.label %></div>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- Testimonials -->
        <section class="py-5">
            <div class="container">
                <h2 class="text-center mb-5 service-title">What Our Hotel Security Clients Say</h2>
                <div class="row">
                    <% serviceData.testimonials.forEach(testimonial => { %>
                    <div class="col-md-4">
                        <div class="testimonial-card">
                            <img src="/img/<%= testimonial.image %>" alt="<%= testimonial.name %>, <%= testimonial.title %>" class="client-image" loading="lazy" width="80" height="80">
                            <h4><%= testimonial.name %></h4>
                            <p class="text-muted"><%= testimonial.title %></p>
                            <p>"<%= testimonial.quote %>"</p>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="cta-section">
            <div class="container">
                <h2 class="mb-4">Secure Your Hotel with Professional Security Services</h2>
                <p class="mb-4">Get immediate hotel security deployment with our hospitality-focused protection services</p>
                <button class="btn btn-custom" aria-label="Request hotel security consultation" onclick="trackHotelSecurityRequest()">
                    <i class="fas fa-hotel"></i> Get Hotel Security Quote
                </button>
            </div>
        </section>
    </main>

