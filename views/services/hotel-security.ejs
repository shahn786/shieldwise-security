            gtag('event', 'generate_lead', {
                'event_category': 'Security Services',
                'event_label': 'hotel',
                'value': 1
            });
            fbq('track', 'Lead');
            // Redirect to quote page
            window.location.href = '/get-quote';
        }
    </script>

