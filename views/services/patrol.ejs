    <!-- Critical CSS Inline -->
    <style>
        :root {
            --primary-color: #1a3c6e;
            --secondary-color: #bf9e5b;
            --text-color: #333333;
            --light-bg: #f8f9fa;
        }

        body {
            font-family: 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            color: var(--text-color);
            line-height: 1.6;
        }

        .hero-section {
            background: linear-gradient(rgba(26, 60, 110, 0.9), rgba(26, 60, 110, 0.9)), url('/img/mobilesecurity.webp');
            background-size: cover;
            background-position: center;
            padding: 150px 0;
            color: white;
            text-align: center;
        }

        .hero-title {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .hero-subtitle {
            font-size: 1.5rem;
            max-width: 800px;
            margin: 0 auto;
            opacity: 0.9;
        }

        .service-card {
            background: white;
            border-radius: 15px;
            padding: 30px;
            margin: 20px 0;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
        }

        .service-card:hover {
            transform: translateY(-5px);
        }

        .service-icon {
            font-size: 2.5rem;
            color: var(--secondary-color);
            margin-bottom: 20px;
        }

        .service-title {
            color: var(--primary-color);
            font-size: 1.8rem;
            margin-bottom: 15px;
            font-weight: 600;
        }

        .feature-list {
            list-style: none;
            padding: 0;
        }

        .feature-list li {
            padding: 10px 0;
            padding-left: 30px;
            position: relative;
        }

        .feature-list li:before {
            content: 'âœ“';
            position: absolute;
            left: 0;
            color: var(--secondary-color);
            font-weight: bold;
        }

        .cta-section {
            background: linear-gradient(135deg, var(--primary-color), #0d2b54);
            padding: 80px 0;
            color: white;
            text-align: center;
        }

        .btn-custom {
            background: var(--secondary-color);
            color: white;
            padding: 15px 30px;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
            border: none;
        }

        .btn-custom:hover {
            background: #a88b4a;
            color: white;
            transform: translateY(-2px);
        }

        .stats-section {
            padding: 60px 0;
            background: var(--light-bg);
        }

        .stat-card {
            text-align: center;
            padding: 30px;
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 10px;
        }

        .testimonial-card {
            background: white;
            padding: 30px;
            border-radius: 15px;
            margin: 20px 0;
            box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        }

        .client-image {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            margin-bottom: 20px;
        }

        @media (max-width: 768px) {
            .hero-title {
                font-size: 2.5rem;
            }

            .hero-subtitle {
                font-size: 1.2rem;
            }
        }
    </style>
</head>
<body id="top">
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <%- include('../partials/Header') %>

    <!-- Breadcrumb Navigation -->
    <%- include('../partials/breadcrumb', { 
        breadcrumbs: [
            { name: 'Services', url: '/services' },
            { name: 'Mobile Patrol Security', url: null }
        ]
    }) %>

    <main id="main-content">
        <!-- Hero Section -->
        <section class="hero-section">
            <div class="container">
                <h1 class="hero-title speakable-intro"><%= serviceData.serviceTitle %></h1>
                <p class="hero-subtitle speakable-intro"><%= serviceData.serviceDescription %></p>
            </div>
        </section>

        <!-- Premier Overview Section -->
        <div style="background-color:#ffffff; padding:60px; border-radius:14px;
            font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color:#1c1c1c; max-width:960px; margin:60px auto;
            box-shadow:0 10px 30px rgba(0,0,0,0.1); border:1px solid #e0e0e0;">
            <h2 style="font-size:38px; margin-bottom:28px; color:#152f45;">
                Premier Mobile Patrol Security Services
            </h2>
            <p class="speakable-services" style="font-size:20px; line-height:1.8; margin-bottom:0;">
                <strong>ShieldWise Security</strong> provides California's most comprehensive <strong>mobile patrol security services</strong> with <strong style="color:#bf9e5b;">24/7 random patrols</strong>, <strong style="color:#bf9e5b;">rapid alarm response</strong>, <strong style="color:#bf9e5b;">detailed property inspections</strong>, and <strong style="color:#bf9e5b;">visible deterrent presence</strong> for businesses and residential communities requiring reliable mobile security coverage.
            </p>
            <div class="speakable-contact" style="margin-top:20px; font-size:18px;">
                <strong>24/7 Patrol Hotline:</strong> +1-800-744-3531 |
                <strong>Email:</strong> patrol@shieldwisesecurity.com
            </div>
        </div>

        <!-- Patrol Features Section -->
        <section id="features" class="apartment-features-section">
            <div class="container">
                <h2 class="section-title">Mobile Patrol Features</h2>
                <p class="section-subtitle">Comprehensive security coverage with professional patrol services</p>
                
                <div class="apartment-grid">
                    <% serviceData.features.forEach(feature => { %>
                    <div class="apartment-card">
                        <div class="apartment-icon">
                            <i class="<%= feature.icon %>" aria-hidden="true"></i>
                        </div>
                        <h3 class="apartment-title"><%= feature.title %></h3>
                        <p class="apartment-description"><%= feature.description %></p>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- Services Overview -->
        <section class="py-5">
            <div class="container">
                <div class="row">
                    <% serviceData.serviceOfferings.forEach(offering => { %>
                    <div class="col-md-4">
                        <div class="service-card">
                            <i class="<%= offering.icon %> service-icon" aria-hidden="true"></i>
                            <h3 class="service-title"><%= offering.title %></h3>
                            <ul class="feature-list">
                                <% offering.features.forEach(feature => { %>
                                <li><%= feature %></li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- Stats Section -->
        <section class="stats-section">
            <div class="container">
                <div class="row">
                    <% serviceData.statistics.forEach(stat => { %>
                    <div class="col-md-3">
                        <div class="stat-card">
                            <div class="stat-number"><%= stat.number %></div>
                            <div class="stat-label"><%= stat.label %></div>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- Testimonials -->
        <section class="py-5">
            <div class="container">
                <h2 class="text-center mb-5 service-title">What Our Patrol Clients Say</h2>
                <div class="row">
                    <% serviceData.testimonials.forEach(testimonial => { %>
                    <div class="col-md-4">
                        <div class="testimonial-card">
                            <img src="/img/<%= testimonial.image %>" alt="<%= testimonial.name %>, <%= testimonial.title %>" class="client-image" loading="lazy" width="80" height="80">
                            <h4><%= testimonial.name %></h4>
                            <p class="text-muted"><%= testimonial.title %></p>
                            <p>"<%= testimonial.quote %>"</p>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="cta-section">
            <div class="container">
                <h2 class="mb-4">Secure Your Property with Mobile Patrol Services</h2>
                <p class="mb-4">Get professional mobile patrol security with rapid response and detailed reporting</p>
                <button class="btn btn-custom" aria-label="Request mobile patrol security services" onclick="trackPatrolRequest()">
                    <i class="fas fa-car"></i> Get Patrol Services Now
                </button>
            </div>
        </section>
    </main>

