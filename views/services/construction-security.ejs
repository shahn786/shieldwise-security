    <%- include('../partials/tracking-scripts', {
        serviceType: serviceData.serviceType,
        priceRange: serviceData.priceRange
    }) %>
</head>
<body>
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <%- include('../partials/Header') %>

    <main id="main-content">
        <!-- Hero Section -->
        <section class="hero-section">
            <div class="container">
                <div class="hero-badge speakable-intro">Construction Security Specialists</div>
                <h1 class="hero-title speakable-intro"><%= serviceData.serviceTitle %></h1>
                <p class="hero-subtitle speakable-intro"><%= serviceData.serviceDescription %></p>
                <div class="response-guarantee speakable-contact">
                    <i class="fas fa-clock"></i> 24-Hour Emergency Response Available
                </div>
            </div>
        </section>

        <!-- Premier Overview Section -->
        <div style="background-color:#ffffff; padding:60px; border-radius:14px; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color:#1c1c1c; max-width:960px; margin:60px auto; box-shadow:0 10px 30px rgba(220,53,69,0.1); border:1px solid #e0e0e0;">
            <h2 style="font-size:38px; margin-bottom:28px; color:#152f45;">
                Premier Construction Site Security Services for Total Project Protection
            </h2>
            <p class="speakable-services" style="font-size:20px; line-height:1.8; margin-bottom:0;">
                <strong>ShieldWise Security</strong> provides comprehensive construction site protection through continuous <strong style="color:#dc3545;">24-hour security coverage</strong> featuring dedicated on-site guards, systematic mobile patrol services, and coordinated foot and vehicle surveillance to protect valuable equipment and materials from theft and vandalism. Our fully licensed, insured, and bonded security professionals deliver both <strong style="color:#dc3545;">armed and unarmed security options</strong>, comprehensive visitor management, VIP escort coordination, and robust perimeter security utilizing cutting-edge CCTV monitoring and strict access control measures.
            </p>
            <div class="speakable-contact" style="margin-top:20px; font-size:18px;">
                <strong>Emergency Hotline:</strong> +1-714-716-7430 |
                <strong>Email:</strong> construction-security@shieldwisesecurity.com
            </div>
        </div>

        <!-- Construction Security Features Section -->
        <section id="features" class="apartment-features-section">
            <div class="container">
                <h2 class="section-title">Comprehensive Construction Site Security Solutions</h2>
                <p class="section-subtitle">Advanced security services designed specifically for construction environments</p>

                <div class="apartment-grid">
                    <% serviceData.features.forEach(feature => { %>
                    <div class="apartment-card">
                        <div class="apartment-icon">
                            <i class="<%= feature.icon %>" aria-hidden="true"></i>
                        </div>
                        <h3 class="apartment-title"><%= feature.title %></h3>
                        <p class="apartment-description"><%= feature.description %></p>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- Security Process Section -->
        <section class="security-process-section">
            <div class="container">
                <h2 class="section-title">Our Construction Security Process</h2>
                <p class="section-subtitle">A systematic approach to construction site protection</p>

                <div class="row">
                    <% serviceData.processSteps.forEach(step => { %>
                    <div class="col-md-3">
                        <div class="process-step">
                            <div class="process-number"><%= step.number %></div>
                            <h3 class="process-title"><%= step.title %></h3>
                            <p><%= step.description %></p>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- Benefits Section -->
        <section class="benefits-section">
            <div class="container">
                <h2 class="section-title">Why Choose ShieldWise for Construction Security</h2>
                <div class="row">
                    <div class="col-md-6">
                        <% serviceData.benefits.slice(0, 3).forEach(benefit => { %>
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <i class="<%= benefit.icon %>" aria-hidden="true"></i>
                            </div>
                            <div class="benefit-content">
                                <h4><%= benefit.title %></h4>
                                <p><%= benefit.description %></p>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                    <div class="col-md-6">
                        <% serviceData.benefits.slice(3, 6).forEach(benefit => { %>
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <i class="<%= benefit.icon %>" aria-hidden="true"></i>
                            </div>
                            <div class="benefit-content">
                                <h4><%= benefit.title %></h4>
                                <p><%= benefit.description %></p>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </section>

        <!-- Services Overview -->
        <section class="py-5">
            <div class="container">
                <div class="row">
                    <% serviceData.serviceOfferings.forEach(offering => { %>
                    <div class="col-md-4">
                        <div class="service-card">
                            <i class="<%= offering.icon %> service-icon" aria-hidden="true"></i>
                            <h3 class="service-title"><%= offering.title %></h3>
                            <ul class="feature-list">
                                <% offering.features.forEach(feature => { %>
                                <li><%= feature %></li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- Stats Section -->
        <section class="stats-section">
            <div class="container">
                <div class="row">
                    <% serviceData.statistics.forEach(stat => { %>
                    <div class="col-md-3">
                        <div class="stat-card">
                            <div class="stat-number"><%= stat.number %></div>
                            <div class="stat-label"><%= stat.label %></div>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- Testimonials -->
        <section class="py-5">
            <div class="container">
                <h2 class="text-center mb-5 service-title">What Construction Managers Say</h2>
                <div class="row">
                    <% serviceData.testimonials.forEach(testimonial => { %>
                    <div class="col-md-4">
                        <div class="testimonial-card">
                            <img src="/img/<%= testimonial.image %>" alt="<%= testimonial.name %>, <%= testimonial.title %>" class="client-image" loading="lazy" width="80" height="80">
                            <h4><%= testimonial.name %></h4>
                            <p class="text-muted"><%= testimonial.title %></p>
                            <p>"<%= testimonial.quote %>"</p>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="cta-section">
            <div class="container">
                <h2 class="mb-4">Secure Your Construction Site Today</h2>
                <p class="mb-4">Contact us for a customized construction security solution that protects your project and assets</p>
                <button class="btn btn-custom" aria-label="Request construction security services" onclick="trackConstructionSecurityRequest()">
                    <i class="fas fa-hard-hat"></i> Get Site Security Now
                </button>
            </div>
        </section>
    </main>

    <%- include('../partials/Footer') %>

