<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/meta-tags-commercial-security') %>
    <%- include('../partials/performance-optimization') %>
    <%- include('../partials/mobile-app-meta') %>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/apartment-security.min.css" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600&display=swap" rel="stylesheet">

    <%- include('../partials/schema-primary') %>
    <%- include('../partials/schema-commercial-security') %>
    <%- include('../partials/schema-faq-commercial-security') %>
    <%- include('../partials/tracking-scripts', {
        serviceType: serviceData.serviceType,
        priceRange: serviceData.priceRange
    }) %>
</head>
<body id="top">
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <%- include('../partials/Header') %>

    <main id="main-content">
        <section class="hero-section">
            <div class="container">
                <div class="hero-badge speakable-intro">Commercial Security Specialists</div>
                <h1 class="hero-title speakable-intro"><%= serviceData.serviceTitle %></h1>
                <p class="hero-subtitle speakable-intro"><%= serviceData.serviceDescription %></p>
                <div class="response-guarantee speakable-contact">
                    <i class="fas fa-clock"></i> 24/7 Business Protection Available
                </div>
            </div>
        </section>

        <div style="background-color:#ffffff; padding:60px; border-radius:14px; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color:#1c1c1c; max-width:960px; margin:60px auto; box-shadow:0 10px 30px rgba(220,53,69,0.1); border:1px solid #e0e0e0;">
            <h2 style="font-size:38px; margin-bottom:28px; color:#152f45;">
                Enterprise-Grade Commercial Security Systems for California Businesses
            </h2>
            <p class="speakable-services" style="font-size:20px; line-height:1.8; margin-bottom:0;">
                <strong>ShieldWise Security</strong> delivers comprehensive commercial security protection through <strong style="color:#dc3545;">ISO 27001 certified systems</strong>, <strong style="color:#dc3545;">24/7 monitoring</strong>, advanced access control, video surveillance with AI analytics, and professional security personnel. Our enterprise-grade solutions protect over 500+ California businesses with customized security strategies tailored to your industry and specific threats.
            </p>
            <div class="speakable-contact" style="margin-top:20px; font-size:18px;">
                <strong>Emergency Hotline:</strong> +1-714-716-7430 |
                <strong>Email:</strong> commercial-security@shieldwisesecurity.com
            </div>
        </div>

        <section id="features" class="apartment-features-section">
            <div class="container">
                <h2 class="section-title">Comprehensive Commercial Security Solutions</h2>
                <p class="section-subtitle">Enterprise-grade security services designed for California businesses</p>

                <div class="apartment-grid">
                    <% serviceData.features.forEach(feature => { %>
                    <div class="apartment-card">
                        <div class="apartment-icon">
                            <i class="<%= feature.icon %>" aria-hidden="true"></i>
                        </div>
                        <h3 class="apartment-title"><%= feature.title %></h3>
                        <p class="apartment-description"><%= feature.description %></p>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <section class="security-process-section">
            <div class="container">
                <h2 class="section-title">Our Commercial Security Process</h2>
                <p class="section-subtitle">Systematic approach to enterprise business protection</p>

                <div class="row">
                    <% serviceData.processSteps.forEach(step => { %>
                    <div class="col-md-3">
                        <div class="process-step">
                            <div class="process-number"><%= step.number %></div>
                            <h3 class="process-title"><%= step.title %></h3>
                            <p><%= step.description %></p>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <section class="benefits-section">
            <div class="container">
                <h2 class="section-title">Why Choose ShieldWise for Commercial Security</h2>
                <div class="row">
                    <div class="col-md-6">
                        <% serviceData.benefits.slice(0, 3).forEach(benefit => { %>
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <i class="<%= benefit.icon %>" aria-hidden="true"></i>
                            </div>
                            <div class="benefit-content">
                                <h4><%= benefit.title %></h4>
                                <p><%= benefit.description %></p>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                    <div class="col-md-6">
                        <% serviceData.benefits.slice(3, 6).forEach(benefit => { %>
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <i class="<%= benefit.icon %>" aria-hidden="true"></i>
                            </div>
                            <div class="benefit-content">
                                <h4><%= benefit.title %></h4>
                                <p><%= benefit.description %></p>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </section>

        <section class="py-5">
            <div class="container">
                <div class="row">
                    <% serviceData.serviceOfferings.forEach(offering => { %>
                    <div class="col-md-4">
                        <div class="service-card">
                            <i class="<%= offering.icon %> service-icon" aria-hidden="true"></i>
                            <h3 class="service-title"><%= offering.title %></h3>
                            <ul class="feature-list">
                                <% offering.features.forEach(feature => { %>
                                <li><%= feature %></li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <section class="stats-section">
            <div class="container">
                <div class="row">
                    <% serviceData.statistics.forEach(stat => { %>
                    <div class="col-md-3">
                        <div class="stat-card">
                            <div class="stat-number"><%= stat.number %></div>
                            <div class="stat-label"><%= stat.label %></div>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <section class="py-5">
            <div class="container">
                <h2 class="text-center mb-5 service-title">What Business Leaders Say</h2>
                <div class="row">
                    <% serviceData.testimonials.forEach(testimonial => { %>
                    <div class="col-md-4">
                        <div class="testimonial-card">
                            <img src="/img/<%= testimonial.image %>" alt="<%= testimonial.name %>, <%= testimonial.title %>" class="client-image" loading="lazy" width="80" height="80">
                            <h4><%= testimonial.name %></h4>
                            <p class="text-muted"><%= testimonial.title %></p>
                            <p>"<%= testimonial.quote %>"</p>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <section class="cta-section">
            <div class="container">
                <h2 class="mb-4">Protect Your Business with Enterprise Security</h2>
                <p class="mb-4">Contact us for a free security assessment and customized protection plan for your business</p>
                <button class="btn btn-custom" aria-label="Request commercial security services" onclick="trackCommercialSecurityRequest()">
                    <i class="fas fa-building"></i> Get Business Security Now
                </button>
            </div>
        </section>
    </main>

    <%- include('../partials/Footer') %>

    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "WebPage",
        "speakable": {
            "@type": "SpeakableSpecification",
            "cssSelector": [
                ".speakable-intro",
                ".speakable-services", 
                ".speakable-contact"
            ]
        },
        "url": "<%= serviceData.canonicalUrl %>"
    }
    </script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js" defer></script>

    <script>
        function trackCommercialSecurityRequest() {
            gtag('event', 'generate_lead', {
                'event_category': 'Commercial Security Services',
                'event_label': 'commercial_security',
                'value': 1,
                'custom_parameter_1': 'commercial_security'
            });
            
            fbq('track', 'Lead', {
                content_name: 'Commercial Security Request',
                content_category: 'Commercial Security Services',
                value: <%= serviceData.priceRange.low %>,
                currency: 'USD'
            });
            
            window.location.href = '/get-quote';
        }

        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -100px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                    entry.target.classList.add('animate-on-scroll');
                }
            });
        }, observerOptions);

        document.querySelectorAll('.apartment-card, .service-card, .process-step, .benefit-item').forEach(el => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(30px)';
            el.style.transition = 'all 0.6s ease';
            observer.observe(el);
        });

        function animateCounter(element, target) {
            let current = 0;
            const increment = target / 100;
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    current = target;
                    clearInterval(timer);
                }
                const displayValue = Math.floor(current);
                const originalText = element.textContent;
                if (originalText.includes('+')) {
                    element.textContent = displayValue + '+';
                } else if (originalText.includes('%')) {
                    element.textContent = displayValue + '%';
                } else if (originalText.includes('/')) {
                    element.textContent = originalText;
                } else {
                    element.textContent = displayValue;
                }
            }, 20);
        }

        const statObserver = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting && !entry.target.classList.contains('animated')) {
                    entry.target.classList.add('animated');
                    const statNumber = entry.target.querySelector('.stat-number');
                    const value = parseInt(statNumber.textContent.replace(/[^\d]/g, ''));
                    if (value && value > 0) {
                        animateCounter(statNumber, value);
                    }
                }
            });
        }, { threshold: 0.5 });

        document.querySelectorAll('.stat-card').forEach(el => {
            statObserver.observe(el);
        });
    </script>

    <%- include('../partials/tracking-scripts-deferred') %>

    <!-- Back to Top Button -->
    <a href="#top" id="backToTop" class="back-to-top" aria-label="Back to top">
        <i class="fas fa-arrow-up"></i>
    </a>

    <!-- Back to Top Script -->
    <script src="/JS/back-to-top.js" defer></script>
    <link rel="stylesheet" href="/css/back-to.css">
</body>
</html>
