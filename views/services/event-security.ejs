  <!-- JavaScript for interactive elements -->
  <script>
    // Back to Top Button
    const backToTopButton = document.getElementById('backToTop');

    window.addEventListener('scroll', () => {
      if (window.pageYOffset > 300) {
        backToTopButton.classList.remove('opacity-0', 'invisible');
        backToTopButton.classList.add('opacity-100', 'visible');
      } else {
        backToTopButton.classList.remove('opacity-100', 'visible');
        backToTopButton.classList.add('opacity-0', 'invisible');
      }
    });

    backToTopButton.addEventListener('click', () => {
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    });

    // Testimonials Carousel
    let currentSlide = 0;
    const slides = document.querySelectorAll('.testimonial-slide');
    const dots = document.querySelectorAll('.testimonial-dot');

    function showSlide(index) {
      slides.forEach(slide => slide.classList.add('hidden'));
      slides[index].classList.remove('hidden');
      slides[index].classList.add('block');

      dots.forEach(dot => dot.classList.remove('bg-white'));
      dots.forEach(dot => dot.classList.add('bg-transparent'));
      dots[index].classList.remove('bg-transparent');
      dots[index].classList.add('bg-white');
    }

    function nextSlide() {
      currentSlide = (currentSlide === slides.length - 1) ? 0 : currentSlide + 1;
      showSlide(currentSlide);
    }

    function prevSlide() {
      currentSlide = (currentSlide === 0) ? slides.length - 1 : currentSlide - 1;
      showSlide(currentSlide);
    }

    function goToSlide(index) {
      currentSlide = index;
      showSlide(currentSlide);
    }

    // Auto advance slides
    setInterval(nextSlide, 8000);

    // FAQ Accordion
    function toggleFAQ(index) {
      const faqItems = document.querySelectorAll('.faq-item');
      const faqContent = faqItems[index].querySelector('div:nth-child(2)');
      const faqIcon = faqItems[index].querySelector('i');

      if (faqContent.classList.contains('hidden')) {
        faqContent.classList.remove('hidden');
        faqContent.classList.add('block');
        faqIcon.classList.remove('fa-plus');
        faqIcon.classList.add('fa-minus');
        faqItems[index].querySelector('button').classList.add('bg-primary', 'bg-opacity-5');
        faqItems[index].querySelector('button').classList.remove('bg-neutral-lightest', 'hover:bg-neutral-light');
      } else {
        faqContent.classList.add('hidden');
        faqContent.classList.remove('block');
        faqIcon.classList.add('fa-plus');
        faqIcon.classList.remove('fa-minus');
        faqItems[index].querySelector('button').classList.remove('bg-primary', 'bg-opacity-5');
        faqItems[index].querySelector('button').classList.add('bg-neutral-lightest', 'hover:bg-neutral-light');
      }
    }

    // City Accordion
    function toggleCity(index) {
      const cityItems = document.querySelectorAll('.city-item');
      const cityContent = cityItems[index].querySelector('div:nth-child(2)');
      const cityIcon = cityItems[index].querySelector('i');
      const cityButton = cityItems[index].querySelector('button');

      if (cityContent.classList.contains('hidden')) {
        cityContent.classList.remove('hidden');
        cityContent.classList.add('block');
        cityIcon.classList.add('rotate-180');
        cityButton.classList.add('bg-primary-light', 'bg-opacity-10', 'text-primary');
        cityButton.classList.remove('bg-white', 'hover:bg-neutral-lightest');
      } else {
        cityContent.classList.add('hidden');
        cityContent.classList.remove('block');
        cityIcon.classList.remove('rotate-180');
        cityButton.classList.remove('bg-primary-light', 'bg-opacity-10', 'text-primary');
        cityButton.classList.add('bg-white', 'hover:bg-neutral-lightest');
      }
    }
