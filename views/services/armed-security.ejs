        priceRange: serviceData.priceRange
    }) %>
</head>
<body id="top">
    <a href="#main-content" class="skip-link">Skip to main content</a>
    
    <%- include('../partials/Header') %>

    <!-- Breadcrumb Navigation -->
    <%- include('../partials/breadcrumb', { 
        breadcrumbs: [
            { name: 'Services', url: '/services' },
            { name: 'Armed Security Guards', url: null }
        ]
    }) %>
    
    <main id="main-content">
        <!-- Hero Section -->
        <section class="hero-section">
            <div class="container">
                <div class="hero-badge speakable-intro">Armed Security Specialists</div>
                <h1 class="hero-title speakable-intro"><%= serviceData.serviceTitle %></h1>
                <p class="hero-subtitle speakable-intro"><%= serviceData.serviceDescription %></p>
                <div class="response-guarantee speakable-contact">
                    <i class="fas fa-clock"></i> 15-Minute Emergency Response Guarantee
                </div>
            </div>
        </section>

        <!-- Premier Overview Section -->
        <div style="background-color:#ffffff; padding:60px; border-radius:14px; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color:#1c1c1c; max-width:960px; margin:60px auto; box-shadow:0 10px 30px rgba(220,53,69,0.1); border:1px solid #e0e0e0;">
            <h2 style="font-size:38px; margin-bottom:28px; color:#152f45;">
                Premier Armed Security Services for Maximum Protection
            </h2>
            <p class="speakable-services" style="font-size:20px; line-height:1.8; margin-bottom:0;">
                <strong>ShieldWise Security</strong> provides California's most comprehensive armed security services with <strong style="color:#dc3545;">BSIS-licensed armed guards</strong>, <strong style="color:#dc3545;">military & law enforcement veterans</strong>, <strong style="color:#dc3545;">sub-15-minute emergency response</strong>, and <strong style="color:#dc3545;">24/7 tactical support</strong> for businesses requiring the highest level of protection.
            </p>
            <div class="speakable-contact" style="margin-top:20px; font-size:18px;">
                <strong>Emergency Hotline:</strong> +1-800-744-3531 |
                <strong>Email:</strong> armed-security@shieldwisesecurity.com
            </div>
        </div>

        <!-- Armed Security Features Section -->
        <section id="features" class="apartment-features-section">
            <div class="container">
                <h2 class="section-title">ShieldWise Security Features</h2>
                <p class="section-subtitle">Advanced protection capabilities with military-grade precision</p>
                
                <div class="apartment-grid">
                    <% serviceData.features.forEach(feature => { %>
                    <div class="apartment-card">
                        <div class="apartment-icon">
                            <i class="<%= feature.icon %>" aria-hidden="true"></i>
                        </div>
                        <h3 class="apartment-title"><%= feature.title %></h3>
                        <p class="apartment-description"><%= feature.description %></p>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- Security Process Section -->
        <section class="security-process-section">
            <div class="container">
                <h2 class="section-title">Our Armed Security Process</h2>
                <p class="section-subtitle">Military-precision approach to tactical security</p>
                
                <div class="row">
                    <% serviceData.processSteps.forEach(step => { %>
                    <div class="col-md-3">
                        <div class="process-step">
                            <div class="process-number"><%= step.number %></div>
                            <h3 class="process-title"><%= step.title %></h3>
                            <p><%= step.description %></p>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- Benefits Section -->
        <section class="benefits-section">
            <div class="container">
                <h2 class="section-title">Why Choose ShieldWise Armed Security</h2>
                <div class="row">
                    <div class="col-md-6">
                        <% serviceData.benefits.slice(0, 3).forEach(benefit => { %>
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <i class="<%= benefit.icon %>" aria-hidden="true"></i>
                            </div>
                            <div class="benefit-content">
                                <h4><%= benefit.title %></h4>
                                <p><%= benefit.description %></p>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                    <div class="col-md-6">
                        <% serviceData.benefits.slice(3, 6).forEach(benefit => { %>
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <i class="<%= benefit.icon %>" aria-hidden="true"></i>
                            </div>
                            <div class="benefit-content">
                                <h4><%= benefit.title %></h4>
                                <p><%= benefit.description %></p>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </section>

        <!-- Services Overview -->
        <section class="py-5">
            <div class="container">
                <div class="row">
                    <% serviceData.serviceOfferings.forEach(offering => { %>
                    <div class="col-md-4">
                        <div class="service-card">
                            <i class="<%= offering.icon %> service-icon" aria-hidden="true"></i>
                            <h3 class="service-title"><%= offering.title %></h3>
                            <ul class="feature-list">
                                <% offering.features.forEach(feature => { %>
                                <li><%= feature %></li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- Stats Section -->
        <section class="stats-section">
            <div class="container">
                <div class="row">
                    <% serviceData.statistics.forEach(stat => { %>
                    <div class="col-md-3">
                        <div class="stat-card">
                            <div class="stat-number"><%= stat.number %></div>
                            <div class="stat-label"><%= stat.label %></div>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- Testimonials -->
        <section class="py-5">
            <div class="container">
                <h2 class="text-center mb-5 service-title">What Our Armed Security Clients Say</h2>
                <div class="row">
                    <% serviceData.testimonials.forEach(testimonial => { %>
                    <div class="col-md-4">
                        <div class="testimonial-card">
                            <img src="/img/<%= testimonial.image %>" alt="<%= testimonial.name %>, <%= testimonial.title %>" class="client-image" loading="lazy" width="80" height="80">
                            <h4><%= testimonial.name %></h4>
                            <p class="text-muted"><%= testimonial.title %></p>
                            <p>"<%= testimonial.quote %>"</p>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="cta-section">
            <div class="container">
                <h2 class="mb-4">Secure Your Assets with ShieldWise Security Armed Protection</h2>
                <p class="mb-4">Get immediate armed security deployment with our 15-minute response guarantee</p>
                <button class="btn btn-custom" aria-label="Request emergency armed security services" onclick="trackArmedSecurityRequest()">
                    <i class="fas fa-shield-alt"></i> Get Armed Security Now
                </button>
            </div>
        </section>
    </main>

    <%- include('../partials/Footer') %>

    <!-- Structured Data for Voice Search -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "WebPage",
        "speakable": {
            "@type": "SpeakableSpecification",
            "cssSelector": [
                ".speakable-intro",
                ".speakable-services", 
                ".speakable-contact"
            ]
        },
        "url": "<%= serviceData.canonicalUrl %>"
    }
    </script>

    <!-- Essential Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js" defer></script>

    <!-- Armed Security Specific JavaScript -->
    <script>
        // Enhanced tracking for armed security
        function trackArmedSecurityRequest() {
            gtag('event', 'generate_lead', {
                'event_category': 'Armed Security Services',
                'event_label': 'armed_security',
                'value': 1,
                'custom_parameter_1': 'armed_security'
            });
            
            fbq('track', 'Lead', {
                content_name: 'Armed Security Request',
                content_category: 'Armed Security Services',
                value: <%= serviceData.priceRange.low %>,
                currency: 'USD'
            });
            
            // Redirect to emergency contact page
            window.location.href = '/emergency-armed-security';
        }

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Intersection Observer for animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -100px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                    entry.target.classList.add('animate-on-scroll');
                }
            });
        }, observerOptions);

        // Observe elements for animation
        document.querySelectorAll('.apartment-card, .service-card, .process-step, .benefit-item').forEach(el => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(30px)';
            el.style.transition = 'all 0.6s ease';
            observer.observe(el);
        });

        // Counter animation for statistics
        function animateCounter(element, target) {
            let current = 0;
            const increment = target / 100;
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    current = target;
                    clearInterval(timer);
                }
                const displayValue = Math.floor(current);
                const originalText = element.textContent;
                if (originalText.includes('+')) {
                    element.textContent = displayValue + '+';
                } else if (originalText.includes('%')) {
                    element.textContent = displayValue + '%';
                } else if (originalText.includes('/')) {
                    element.textContent = originalText;
                } else {
                    element.textContent = displayValue;
                }
            }, 20);
        }

        // Trigger counter animation when stats come into view
        const statObserver = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting && !entry.target.classList.contains('animated')) {
                    entry.target.classList.add('animated');
                    const statNumber = entry.target.querySelector('.stat-number');
                    const value = parseInt(statNumber.textContent.replace(/[^\d]/g, ''));
                    if (value && value > 0) {
                        animateCounter(statNumber, value);
                    }
                }
            });
        }, { threshold: 0.5 });

        document.querySelectorAll('.stat-card').forEach(el => {
            statObserver.observe(el);
        });

        // Emergency contact feature
        function showEmergencyContact() {
            if (confirm('This is for emergency armed security needs. For immediate response, call our emergency hotline now?')) {
                window.location.href = 'tel:+18007443531';
            }
        }

        // Add emergency contact to hero CTA if needed
        document.addEventListener('DOMContentLoaded', function() {
            const heroSection = document.querySelector('.hero-section');
            if (heroSection) {
                heroSection.addEventListener('click', function(e) {
                    if (e.target.classList.contains('response-guarantee')) {
                        showEmergencyContact();
                    }
                });
            }
        });
    </script>

    <!-- Deferred Tracking Scripts -->
    <%- include('../partials/tracking-scripts-deferred') %>

    <!-- Back to Top Button -->
    <a href="#top" id="backToTop" class="back-to-top" aria-label="Back to top">
        <i class="fas fa-arrow-up"></i>
    </a>

    <!-- Back to Top Script -->
    <script src="/JS/back-to-top.js" defer></script>
</body>
</html>
