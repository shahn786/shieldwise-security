            <h2 style="font-size:38px; margin-bottom:28px; color:#152f45;">
                Premier Fire Watch Security Services for Complete Safety Compliance
            </h2>
            <p class="speakable-services" style="font-size:20px; line-height:1.8; margin-bottom:0;">
                <strong>ShieldWise Security</strong> delivers nonstop fire watch protection through fully licensed and bonded guards stationed on-site around the clock, proactively identifying risks during any system outages to keep your property compliant and secure. Our teams carry out comprehensive <strong style="color:#bf9e5b;">fire hazard assessments</strong> and conduct methodical inspections, logging every finding in real time so issues are documented and addressed without delay.
            </p>
            <div class="speakable-contact" style="margin-top:20px; font-size:18px;">
                <strong>Emergency Hotline:</strong> <%= serviceData.emergencyPhone %> |
                <strong>Email:</strong> <%= serviceData.serviceEmail %>
            </div>
        </div>

        <!-- Fire Watch Features Section -->
        <section id="features" class="firewatch-features-section">
            <div class="container">
                <h2 class="section-title">Comprehensive Fire Watch Protection Services</h2>
                <p class="section-subtitle">Advanced fire safety solutions designed for critical protection</p>

                <div class="firewatch-grid">
                    <% serviceData.features.forEach(feature => { %>
                    <div class="firewatch-card">
                        <div class="firewatch-icon">
                            <i class="<%= feature.icon %>" aria-hidden="true"></i>
                        </div>
                        <h3 class="firewatch-title"><%= feature.title %></h3>
                        <p class="firewatch-description"><%= feature.description %></p>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- Compliance Process Section -->
        <section class="compliance-section">
            <div class="container">
                <h2 class="section-title">Our Fire Watch Compliance Process</h2>
                <p class="section-subtitle">Systematic approach to fire safety and code compliance</p>

                <div class="row">
                    <% serviceData.processSteps.forEach(step => { %>
                    <div class="col-md-3">
                        <div class="compliance-step">
                            <div class="compliance-number"><%= step.number %></div>
                            <h3 class="compliance-title"><%= step.title %></h3>
                            <p><%= step.description %></p>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- Emergency Response Section -->
        <section class="emergency-section">
            <div class="container">
                <h2 class="section-title">Emergency Response Capabilities</h2>
                <div class="row">
                    <div class="col-md-6">
                        <% serviceData.benefits.slice(0, 3).forEach(benefit => { %>
                        <div class="emergency-item">
                            <div class="emergency-icon">
                                <i class="<%= benefit.icon %>" aria-hidden="true"></i>
                            </div>
                            <div class="emergency-content">
                                <h4><%= benefit.title %></h4>
                                <p><%= benefit.description %></p>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                    <div class="col-md-6">
                        <% serviceData.benefits.slice(3, 6).forEach(benefit => { %>
                        <div class="emergency-item">
                            <div class="emergency-icon">
                                <i class="<%= benefit.icon %>" aria-hidden="true"></i>
                            </div>
                            <div class="emergency-content">
                                <h4><%= benefit.title %></h4>
                                <p><%= benefit.description %></p>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </section>

        <!-- Services Overview -->
        <section class="py-5">
            <div class="container">
                <div class="row">
                    <% serviceData.serviceOfferings.forEach(offering => { %>
                    <div class="col-md-4">
                        <div class="service-card">
                            <i class="<%= offering.icon %> service-icon" aria-hidden="true"></i>
                            <h3 class="service-title"><%= offering.title %></h3>
                            <ul class="feature-list">
                                <% offering.features.forEach(feature => { %>
