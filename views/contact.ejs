<!-- Form Validation and Submission Script -->
<script>
  const form = document.getElementById('contact-form');

  // Event listener for real-time validation
  form.querySelectorAll('input, textarea').forEach((field) => {
    field.addEventListener('input', () => {
      if (field.classList.contains('is-invalid')) {
        field.classList.remove('is-invalid');
      }
    });
  });

  form.addEventListener('submit', async function(event) {
    event.preventDefault();

    // Get form elements
    const name = document.getElementById('name').value.trim();
    const email = document.getElementById('email').value.trim();
    const contact_number = document.getElementById('contact_number').value.trim();
    const best_time = document.getElementById('best_time').value.trim();
    const message = document.getElementById('message').value.trim();

    // Validation
    let isValid = true;
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    const contactRegex = /^\d{10}$/;

    const fields = [
      { field: 'name', value: name, error: 'Name is required.' },
      { field: 'email', value: email, regex: emailRegex, error: 'Please enter a valid email address.' },
      { field: 'contact_number', value: contact_number, regex: contactRegex, error: 'Contact number must be exactly 10 digits.' },
      { field: 'best_time', value: best_time, error: 'Best time to reach is required.' },
    ];

    fields.forEach(({ field, value, regex }) => {
      const fieldElement = document.getElementById(field);
      if (!value || (regex && !regex.test(value))) {
        fieldElement.classList.add('is-invalid');
        isValid = false;
      }
    });

    if (!isValid) return;

    // API Call
    try {
      const response = await fetch('/contact', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ name, email, contact_number, best_time, message }),
      });

      const result = await response.json();
      const alertBox = document.getElementById('form-alert');

      if (response.ok) {
        alertBox.className = 'alert alert-success';
        alertBox.innerHTML =  `${result.message || "Your message has been successfully submitted."}`;
        form.reset(); // Reset form
      } else {
        alertBox.className  = 'alert alert-danger';
        alertBox.innerHTML  = `${result.message || "An error occurred. Please try again."}`;          
      }

      alertBox.classList.remove('d-none');
      
      // Smooth scroll to alert message
      alertBox.scrollIntoView({ behavior: 'smooth', block: 'center' });
    } catch (error) {
      const alertBox = document.getElementById('form-alert');
      alertBox.className = 'alert alert-danger';
      alertBox.textContent = 'An error occurred. Please try again later.';
      alertBox.classList.remove('d-none');
    }
  });
  
  // Smooth scroll for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      
      document.querySelector(this.getAttribute('href')).scrollIntoView({
        behavior: 'smooth'
      });
    });
  });
</script>

