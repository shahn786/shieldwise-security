
run = "npm start"
hidden = [".config", "package-lock.json"]
modules = ["nodejs-20"]

[nix]
channel = "stable-23_05"

[env]
PATH = "/home/runner/$REPL_SLUG/node_modules/.bin:/home/runner/.nix-profile/bin"

[packager]
language = "nodejs"
  [packager.features]
  packageSearch = true
  guessImports = true
  enabledForHosting = true

[languages.javascript]
pattern = "**/{*.js,*.jsx,*.ts,*.tsx}"
  [languages.javascript.languageServer]
  start = ["typescript-language-server", "--stdio"]

[deployment]
run = ["node", "index.js"]
deploymentTarget = "autoscale"
build = ["npm", "install", "--production"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Run"
author = 24083186

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node index.js"

[[workflows.workflow]]
name = "Start Server"
author = 24083186

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node index.js"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ShieldWise Server"

[[workflows.workflow]]
name = "ShieldWise Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node index.js"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 44609
externalPort = 3000

[agent]
expertMode = true

